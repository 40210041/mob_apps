<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_coin_toss"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mandles.decisionmaker.CoinToss">

    <ImageButton
        android:id="@+id/ct_home"
        android:background="@drawable/home_icon2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/ct_title"
        android:text="Coin Toss!"
        android:textSize="13pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ct_home"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/ct_msg1"
        android:text="Got 2 choices but can't make\n            up your mind?"
        android:textSize="7pt"
        android:layout_marginTop="27dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ct_title"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/ct_msg2"
        android:text="Press the button and let \nthe coin decide for you!"
        android:textSize="7pt"
        android:layout_marginTop="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ct_msg1"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/ct_coin"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/ct_heads"
        android:layout_below="@+id/ct_msg2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/ct_toss"
        android:text="Toss!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ct_coin"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/ct_result"
        android:text="placemat"
        android:textSize="7pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ct_toss"
        android:layout_marginTop="20dp"/>


</RelativeLayout>
